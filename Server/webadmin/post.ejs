<!DOCTYPE html>
<html lang="en">

<head>
    <%include ./head%>
        <title>Posts</title>
</head>

<body>
    <div class="row layout">
        <div class="col-lg-2 tab-bar">
            <%include ./root%>
        </div>
        <div class="col-lg-10">
            <!-- Load data -->
            <%if (length !== 0) {%>
                <%if (confirm.length !== 0) {%>
                    <h2 style="margin-top: 20px">Các bài đăng đã được duyệt</h2>
                    <table class="table">
                        <thead style="background: chartreuse">
                            <th scope="col">Tên nhà trọ</th>
                            <th scope="col">Chủ nhà</th>
                            <th scope="col">Giá(VNĐ)</th>
                            <th scope="col">Tình trạng</th>
                            <th scope="col">Thời gian tạo</th>
                        </thead>
                        <tbody>
                            <%confirm.forEach(function (post) {%>
                                <tr onclick="location.href = '/admin/post/<%=post._id%>'" class="post-item">
                                    <td>
                                        <%=post.title%>
                                    </td>
                                    <td>
                                        <%=post.user.name%>
                                    </td>
                                    <td>
                                        <%=post.room.price%>
                                    </td>
                                    <td style="color: chartreuse">
                                        Đã được duyệt
                                    </td>
                                    <td>
                                        <%=post.request_date.toString().split('GMT')[0]%>
                                    </td>
                                </tr>
                                <%});%>
                        </tbody>
                    </table>


                    <%}%>


                        <%if (unconfirm.length !== 0) {%>
                            <h2 style="margin-top: 20px">Các bài đăng chưa được duyệt</h2>
                            <table class="table">
                                <thead style="background: chartreuse">
                                    <th scope="col">Tên nhà trọ</th>
                                    <th scope="col">Chủ nhà</th>
                                    <th scope="col">Giá(VNĐ)</th>
                                    <th scope="col">Tình trạng</th>
                                    <th scope="col">Thời gian tạo</th>
                                </thead>
                                <tbody>
                                    <%unconfirm.forEach(function (post) {%>
                                        <tr onclick="location.href = '/admin/post/<%=post._id%>'" class="post-item">
                                            <td>
                                                <%=post.title%>
                                            </td>
                                            <td>
                                                <%=post.user.name%>
                                            </td>
                                            <td>
                                                <%=post.room.price%>
                                            </td>
                                            <td style="color: yellow">
                                                Chưa được duyệt
                                            </td>
                                            <td>
                                                <%=post.request_date.toString().split('GMT')[0]%>
                                            </td>
                                        </tr>
                                        <%});%>
                                </tbody>
                            </table>
                            <%}%>

                                <%if (reject.length !== 0) {%>
                                    <h2 style="margin-top: 20px">Các bài đăng bị từ chối</h2>
                                    <table class="table">
                                        <thead style="background: chartreuse">
                                            <th scope="col">Tên nhà trọ</th>
                                            <th scope="col">Chủ nhà</th>
                                            <th scope="col">Giá(VNĐ)</th>
                                            <th scope="col">Tình trạng</th>
                                            <th scope="col">Thời gian tạo</th>
                                        </thead>
                                        <tbody>
                                            <%reject.forEach(function (post) {%>
                                                <tr onclick="location.href = '/admin/post/<%=post._id%>'" class="post-item">
                                                    <td>
                                                        <%=post.title%>
                                                    </td>
                                                    <td>
                                                        <%=post.user.name%>
                                                    </td>
                                                    <td>
                                                        <%=post.room.price%>
                                                    </td>
                                                    <td style="color: red">
                                                        Bị từ chối
                                                    </td>
                                                    <td>
                                                        <%=post.request_date.toString().split('GMT')[0]%>
                                                    </td>
                                                </tr>
                                                <%});%>
                                        </tbody>
                                    </table>
                                    <%}%>


                                        <%if (remove.length !== 0) {%>
                                            <h2 style="margin-top: 20px">Các bài đăng bị xoá</h2>
                                            <table class="table">
                                                <thead style="background: chartreuse">
                                                    <th scope="col">Tên nhà trọ</th>
                                                    <th scope="col">Chủ nhà</th>
                                                    <th scope="col">Giá(VNĐ)</th>
                                                    <th scope="col">Tình trạng</th>
                                                    <th scope="col">Thời gian tạo</th>
                                                </thead>
                                                <tbody>
                                                    <%remove.forEach(function (post) {%>
                                                        <tr onclick="location.href = '/admin/post/<%=post._id%>'" class="post-item"> 
                                                            <td>
                                                                <%=post.title%>
                                                            </td>
                                                            <td>
                                                                <%=post.user.name%>
                                                            </td>
                                                            <td>
                                                                <%=post.room.price%>
                                                            </td>
                                                            <td style="color: lightgrey">
                                                                Đã bị xoá
                                                            </td>
                                                            <td>
                                                                <%=post.request_date.toString().split('GMT')[0]%>
                                                            </td>
                                                        </tr>
                                                        <%});%>
                                                </tbody>
                                            </table>
                                            <%}%>


                                                <%} else {%>
                                                    Hiện tại chưa có bài đăng nào
                                                    <%}%>
        </div>
    </div>
</body>

</html>